# some useful aliases
alias h='fc -l -30'
alias j=jobs
alias m='most -c'

if [[ "$OSTYPE" =~ ^darwin ]]; then
    alias la='ls -a'
    alias ll='ls -laF'
    alias l='ls -lF'
    alias lh='ls -lh'
    alias lR='ls -lR'
    alias lt='ls -ltrF'
else
    alias la='ls -a --color=auto'
    alias ll='ls -laF --color=auto'
    alias l='ls -lF --color=auto'
    alias lh='ls -lh --color=auto'
    alias lR='ls -lR --color=auto'
    alias lt='ls -ltrF --color=auto'
    alias ls='ls --color=auto'
fi

alias g='egrep'
alias c='clear'
alias x='xargs'
alias xec='xargs emacsclient'
alias xg='xargs egrep -H'
alias xl='xargs ls -lF --color=auto'
alias xi='xargs -I {}'
alias xm='xargs most'

alias +='pushd'
alias -- -='popd'
alias _='dirs'

alias t='telnet'

alias cvsd='cvs -q diff | grep "^RCS"'
alias cvsq='cvs -q'
alias tant="ant -Droot.dir=/home/gold/cvs-tms-dev/src -Denv.CVSROOT=$CVSROOT_TMS_DEV"
alias wgh='wget -S -O /dev/null'
alias srd='screen -rd || screen'
alias xnw='emacs -nw'
alias sup='sudo su -'
alias ped='perl -lpe'

alias s='apt-cache search'
alias S='apt-cache show'

alias jm='eval cd $(emacsclient -e "(with-current-buffer (window-buffer (frame-selected-window)) (expand-file-name default-directory))" | '"sed -E 's/(^\")|(\"$)//g')"

alias fum="fusermount -u"

alias mce='( cd /usr/local/mcedit/mcedit; python mcedit.py )'

alias dmvn='docker run -v $PWD:/app -v /var/run/docker.sock:/var/run/docker.sock -v $HOME/.m2:/root/.m2 -e MAVEN_OPTS="-Xms1024m -Xmx4096m" -p 5555:5555 --network=host -t audiusa/maven-workflow'
alias djava='docker run --name java-container -p 5555:5555 -v ${PWD}:/app -t audiusa/java-workflow -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5555'

alias da='(mvn clean install -DskipTests -Dfrontend.prod=false -Pauto-deploy,generate-js-css)'
alias dap='(mvn clean install -DskipTests -Dfrontend.prod=true -Pauto-deploy,generate-js-css)'
alias db='(mvn clean install -DskipTests -Dfrontend.prod=false -Pauto-deploy,auto-deploy-publish,generate-js-css)'
alias dbp='(mvn clean install -DskipTests -Dfrontend.prod=true -Pauto-deploy,auto-deploy-publish,generate-js-css)'
alias dp='(mvn clean install -DskipTests -Dfrontend.prod=false -Pauto-deploy-publish,generate-js-css)'
alias dpp='(mvn clean install -DskipTests -Dfrontend.prod=true -Pauto-deploy-publish,generate-js-css)'

alias docker-rm-dangling-volumes='docker volume rm $(docker volume ls -qf dangling=true)'

alias reset-export-timestamp='curl -X POST -H '"'"'Content-Type: application/x-www-form-urlencoded'"'"' -i '"'"'https://audit-service.audiusasite.com/audit-service/audit'"'"' --data '"'"'crud=UPDATE&className=com.akqa.audi.job.mdm.export.service.TimestampBookmark&naturalKey=ReservationsExport&payload={"epochSeconds":0}'"'"

alias swagger='docker run -d -p 80:8080 swaggerapi/swagger-editor'
